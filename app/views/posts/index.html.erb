<%- model_class = Post -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
  <% @tags.each do |tag| %>
      <%= link_to tag.name, {action: :filter, tag_name: tag.name}, class: "filter-by-tag #{'active' if params[:tag_name] == tag.name}" %></li>
  <% end %>
</div>
<hr/>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-success' %>
<table class="table table-striped">
  <tbody>
  <% @posts.each do |post| %>
      <tr class="post-row-<%= post.id %>">
        <td width="150">
          <div class="author">
            <strong><%= post.author %></strong>
          </div>
          <br/>

          <div class="post-tags"><%= post.tags_string %></div>
        </td>
        <td>
          <h4 class="post-title"><%= post.title %></h4>
          <hr class="style-three"/>
          <p class="post-body"><%= post.body %></p>
        </td>
        <td width="100">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'btn btn-warning', :width => '80' %>
          <hr class="custom-hr"/>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-danger',
                      :width => '80' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
